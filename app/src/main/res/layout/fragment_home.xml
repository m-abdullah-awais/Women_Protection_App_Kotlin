<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_primary"
    android:padding="24dp">

    <!-- Status Indicator -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="SYSTEM ACTIVE"
        android:textColor="@color/success_green"
        android:textSize="14sp"
        android:letterSpacing="0.2"
        android:textStyle="bold"
        android:background="@drawable/bg_card"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Hero SOS Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSOS"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/bg_sos_button"
        android:text="SOS"
        android:textColor="@color/white"
        android:textSize="64sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:elevation="12dp"
        android:stateListAnimator="@null" 
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/tvSosHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Press for Immediate Assistance"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSOS" />

    <TextView
        android:id="@+id/tvSosSubHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Notifies all your emergency contacts"
        android:textColor="@color/text_tertiary"
        android:textSize="14sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSosHint" />

</androidx.constraintlayout.widget.ConstraintLayout>
