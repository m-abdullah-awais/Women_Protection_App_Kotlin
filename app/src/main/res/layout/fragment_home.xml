<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRose"
    android:paddingTop="24dp"
    tools:context=".ui.home.HomeFragment">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tvHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Emergency Assistance"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorTextDark"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHomeSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tap below to activate SOS"
        android:textColor="@color/colorTextLight"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHomeTitle" />
        
    <!-- Info Card: Clean, Text Only -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="48dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/btnSOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHomeSubtitle"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active Alert Protocol"
                android:textColor="@color/colorPink"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>

            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorSoftPurple"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simulated alerts will be sent to:"
                android:textColor="@color/colorTextDark"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="• 5 Priority Contacts (Family/Friends)"
                android:textColor="@color/colorTextLight"
                android:textSize="14sp"
                android:paddingVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Police Emergency Services (15)"
                android:textColor="@color/colorTextLight"
                android:textSize="14sp"
                android:paddingVertical="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- SOS Button: Strong visual hierarchy -->
    <FrameLayout
        android:id="@+id/btnSOS"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/shape_circle_sos"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SOS"
            android:textColor="@color/white"
            android:textSize="56sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
