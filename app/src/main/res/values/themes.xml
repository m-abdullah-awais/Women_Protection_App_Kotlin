<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.The_sos_application" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Main colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.The_sos_application" parent="Base.Theme.The_sos_application" />

    <style name="PinkCheckBoxTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSecondary">@color/colorPink</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorControlNormal">@color/colorTextLight</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>